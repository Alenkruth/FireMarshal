#!/bin/bash
output_dir=~/hpm_files
mkdir -p $output_dir
num_harts=`grep -o 'hart' /proc/cpuinfo | wc -l`
for ((i=0;i<$num_harts;i++))
do
    mask_decimal=$[ 1 << $i ]
    hpm_counters > $output_dir/hpm_counters$i.out &
    hpm_pid=$!
    taskset -p `printf %x $mask_decimal` $hpm_pid
    kill -USR1 $hpm_pid
done

